{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "make: all",
            "type": "shell",
            "command": "make",
            "args": [
                "all"
            ],
            "options": {
                // Assumes your Makefile is in the 'src' folder,
                // based on your launch.json 'cwd' setting.
                "cwd": "${workspaceFolder}/src"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "make: tests",
            "type": "shell",
            "command": "make",
            "args": [
                "tests"
            ],
            "options": {
                // Assumes your Makefile is in the 'src' folder
                "cwd": "${workspaceFolder}/src"
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}